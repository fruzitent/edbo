{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "listFiles": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "public/*": ["public/*"],
      "src/*": ["src/*"],
      "worker/*": ["worker/*"]
    },
    "plugins": [],
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node"],
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "src/**/*", "worker/**/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
    "transpileOnly": true
  },
  "typeAcquisition": { "enable": true }
}
